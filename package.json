    "@angular/router": "^20.3.0",
    "@crestron/ch5-crcomlib": "^2.17.0",
    "@crestron/ch5-utilities": "^0.1.52",
    "@crestron/ch5-webxpanel": "^2.8.0",
    "@tailwindcss/postcss": "^4.1.18",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
