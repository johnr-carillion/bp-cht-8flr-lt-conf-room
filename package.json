{
  "name": "bp-cht-8flr-lt-conf-room",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:archive": "npm run build && ch5-cli archive -p bp-cht-8flr-lt-conf-room -d dist/bp-cht-8flr-lt-conf-room/browser -o archive",
    "build:deploywithpassword": "npx ch5-cli deploy -p -H 192.168.1.11 -t touchscreen archive/bp-cht-8flr-lt-conf-room.ch5z",
    "build:onestepwithpassword": "npm run build:archive && npm run build:deploywithpassword",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
